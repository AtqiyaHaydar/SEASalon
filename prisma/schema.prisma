generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reservation {
  id Int @id @default(autoincrement())
  name String
  phoneNumber String
  serviceType String @default("Haircuts and Styling")
  date DateTime
  time String
}

model CustomerReview {
  id Int @id @default(autoincrement())
  customerName String
  starRating Int
  comment String
}

model User {
  userId Int @id @default(autoincrement())
  fullName String
  email String
  phoneNumber String
  password String
  role String @default("Customer")
}

model Service {
  id Int @id @default(autoincrement())
  serviceName String
  duration Int
}